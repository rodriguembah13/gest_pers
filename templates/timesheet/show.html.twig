{% extends 'base.html.twig' %}

{% block title %}Timesheet{% endblock %}
{% block page_title %} Timesheet {% endblock %}
{% block page_subtitle %} show {% endblock %}
{% block page_content %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ timesheet.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ timesheet.libelle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ timesheet.description }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ timesheet.dateDebut ? timesheet.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ timesheet.dateFin ? timesheet.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ timesheet.duration }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('timesheet_index') }}">back to list</a>

    <a href="{{ path('timesheet_edit', {'id': timesheet.id}) }}">edit</a>

