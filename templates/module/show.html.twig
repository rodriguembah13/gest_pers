{% extends 'base.html.twig' %}

{% block title %}Module{% endblock %}

{% block body %}
    <h1>Module</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ module.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ module.libelle }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ module.code }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ module.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ module.dateEnd ? module.dateEnd|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Passhash</th>
                <td>{{ module.passhash }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('module_index') }}">back to list</a>

    <a href="{{ path('module_edit', {'id': module.id}) }}">edit</a>

    {{ include('module/_delete_form.html.twig') }}
{% endblock %}
