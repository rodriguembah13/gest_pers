{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}
{% block page_title %} Equipe {% endblock %}
{% block page_subtitle %} show {% endblock %}
{% block page_content %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ team.libelle }}</td></tr>
            <tr><th>Employes</th>  <td><ul>
