{% extends 'base.html.twig' %}

{% block page_title %} Entreprise {% endblock %}
{% block page_subtitle %} List {% endblock %}
{% block page_content %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr class="contentimg">
                <td>{{ entreprise.id }}</td>
                <td>{{ entreprise.libelle }}</td>
                <td>{{ entreprise.adresse }}</td>
                <td>{{ entreprise.telephone }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('entreprise_show', {'id': entreprise.id}) }}">show</a>
                    <a class="btn btn-success" href="{{ path('entreprise_edit', {'id': entreprise.id}) }}">edit</a>
                    <a class="btn btn-default" href="{{ path('entreprise_workday', {'id': entreprise.id}) }}">workday</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('config-rh') }}">Return</a><a class="btn btn-primary pull-right" href="{{ path('entreprise_new') }}">Create new</a>
{% endblock %}
