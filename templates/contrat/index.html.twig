{% extends 'base.html.twig' %}

{% block title %}Contrat index{% endblock %}
{% block page_title %} Contrats {% endblock %}
{% block page_subtitle %} list {% endblock %}
{% block page_content %}
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <a class="btn btn-primary pull-right" href="{{ path('contrat_new') }}">Create new</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>FinEssai</th>
                <th>Salaire</th>
                <th>Satut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contrat in contrats %}
            <tr>
                <td>{{ contrat.id }}</td>
                <td>{{ contrat.libelle }}</td>
                <td>{{ contrat.dateDebut ? contrat.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ contrat.dateFin }}</td>
                <td>{{ contrat.finEssai ? contrat.finEssai|date('Y-m-d') : '' }}</td>
                <td>{{ contrat.salaire }}</td>
                <td>{{ contrat.satut }}</td>
                <td><div class="btn-group">
                    <a class="btn btn-info btn-sm" href="{{ path('contrat_show', {'id': contrat.id}) }}">show</a>
                        <a class="btn btn-primary btn-sm" href="{{ path('contrat_edit', {'id': contrat.id}) }}">edit</a></div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
