{% extends 'base.html.twig' %}

{% block title %}Departement index{% endblock %}
{% block page_title %} Departement {% endblock %}
{% block page_subtitle %} list {% endblock %}
{% block page_content %}

    <div class="row">
        <a class="btn btn-success" href="{{ path('poste_index') }}">list postes</a>  <a class="btn btn-primary pull-right" href="{{ path('departement_new') }}">Create new</a>
    </div>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for departement in departements %}
            <tr>
                <td>{{ departement.id }}</td>
                <td>{{ departement.libelle }}</td>
                <td>{{ departement.code }}</td>
                <td>
                    <div class="btn-group">
                    <a class="btn btn-info btn-sm" href="{{ path('departement_show', {'id': departement.id}) }}">show</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('departement_edit', {'id': departement.id}) }}">edit</a></div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
