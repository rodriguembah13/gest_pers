{% extends 'base.html.twig' %}

{% block title %}New CaConge{% endblock %}
{% block page_title %} Demande de conge {% endblock %}
{% block page_subtitle %} add {% endblock %}
{% block page_content %}
    <br>

    {{ form_start(form) }}
    {#{{ form_row(form.libelle) }}#}
    <div class="col-md-6">

        {{ form_row(form.dateDebut) }}
        {{ form_row(form.nbreJours) }}
    </div>
    <div class="col-md-6">

        {{ form_row(form.dateFin) }}
        {{ form_row(form.type) }}
    </div>
    <div id="status">
        {{ form_row(form.status) }}
    </div>

    {{ form_widget(form) }}
    <div class="pull-right">
        <button type="reset" class="btn btn-warning "><i class="fa fa-times"></i> {{ 'Cancel'|trans }}</button>
        <button type="submit" class="btn btn-primary "><i class="fa fa-check-square"></i> {{ button_label|default('Save') }}</button>
    </div>
    {{ form_end(form) }}

    <a class="btn btn-warning" href="{{ path('ca_conge_my') }}"><i class="fa fa-arrow-left"></i>back to list</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include 'ca_conge/javascript.html.twig' %}
{% endblock %}

