{% extends 'base.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block page_content %}
    <h1>Contrat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contrat.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ contrat.libelle }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ contrat.dateDebut ? contrat.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ contrat.dateFin }}</td>
            </tr>
            <tr>
                <th>FinEssai</th>
                <td>{{ contrat.finEssai ? contrat.finEssai|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Salaire</th>
                <td>{{ contrat.salaire }}</td>
            </tr>
            <tr>
                <th>Satut</th>
                <td>{{ contrat.satut }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contrat_index') }}">back to list</a>

    <a href="{{ path('contrat_edit', {'id': contrat.id}) }}">edit</a>

    {{ include('contrat/_delete_form.html.twig') }}
