{% extends 'base.html.twig' %}

{% block title %}Etude{% endblock %}

{% block page_title %} Etude {% endblock %}
{% block page_subtitle %} edit {% endblock %}
{% block page_content %}
    {{ form_start(form) }}
    {{ form_row(form.titreFonction) }}
    <div class="col-md-6">
        {{ form_row(form.employeur) }}
        {{ form_row(form.dateDebut) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.adresse) }}
        {{ form_row(form.dateFin) }}
    </div>
    {{ form_widget(form) }}
    <div class="row">
        <div class="pull-left">
            <a class="btn btn-warning"  href="{{ path('employe') }}"><i class="fa fa-arrow-left"></i> back to list</a>
        </div>
        <div class="pull-right">
            <button type="reset" class="btn btn-warning "><i class="fa fa-times"></i> {{ 'Cancel'|trans }}</button>
            <button type="submit" class="btn btn-primary "><i class="fa fa-check-square"></i> {{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
    <br>
    <hr>
    <table class="table table-condensed">
        <thead>
        <tr class="bg-aqua">
            <th>Id</th>
            <th>Titre Fonction</th>
            <th>Employeur</th>
            <th>Adresse</th>
            <th>date debut</th><th>date fin</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for etude in employe.experienceEmployes %}
            <tr class="contentimg">
                <td>{{ etude.id }}</td>
                <td>{{ etude.titreFonction }}</td>
                <td>{{ etude.employeur}}</td>
                <td>{{ etude.adresse}}</td>
                <td>{{ etude.dateDebut ? etude.dateDebut|date('Y-m-d') : ''}}</td>
                <td>{{ etude.dateFin ? etude.dateFin|date('Y-m-d') : ''}}</td>
                <td><div class="btn-group">
                        {#<a class="btn btn-primary btn-sm" href="{{ path('type_contrat_edit', {'id': type_contrat.id}) }}">edit</a>#}</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

