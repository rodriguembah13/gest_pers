{% extends 'base.html.twig' %}

{% block title %}New Employe{% endblock %}
{% block page_title %} Employes {% endblock %}
{% block page_subtitle %} new {% endblock %}
{% block page_content %}
<div class="row">
    {{ form_start(form) }}
    <div class="col-md-6">
        {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
            {% block box_before %}{% endblock %}
            {% block box_title %}{{ 'information personnelle'|trans }}{% endblock %}
            {% block box_body %}
                <p>
                    Submit the form to see validation errors...
                </p>
                <hr>
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>
                        {{ form_row(form.nomComplet) }}
                {{ form_row(form.telephone) }}
                        {{ form_row(form.sexe) }}
                {{ form_row(form.adresse) }}
                {{ form_row(form.email) }}
                {{ form_row(form.dateNaissance) }}
                {{ form_row(form.lieuNaissance) }}
            {% endblock %}
            {% block box_footer %}

            {% endblock %}

            {% block box_after %}{% endblock %}
        {% endembed %}
    </div>
